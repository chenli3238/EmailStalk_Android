<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minHeight="40dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/preferenceLayout"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/prefIndicator"
        android:layout_alignParentRight="true">

        <CustomControl.TextViewLatoBolt
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:maxLines="2"
            android:textSize="@dimen/heading_text_size"
            android:text="Email we need to met doctor at 7:00 pm "
            android:id="@+id/preferenceHeading"/>

        <CustomControl.TextViewRegular
            android:layout_width="match_parent"
            android:id="@+id/preferenceInfo"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:text="Jan 17 ,2017"/>
    </LinearLayout>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBlack"
        android:id="@+id/prefIndicator"
        android:background="@drawable/check"
        android:layout_alignParentLeft="true" />

</RelativeLayout>